= form_for @user do |f|
  = f.error_messages
  %p
    = f.label :username
    %br
    = f.text_field :username
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :email, "Email Address"
    %br
    = f.text_field :email
    /  example. text_field_tag :user, :email
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = f.label :password_confirmation, "Confirm Password"
    %br
    = f.password_field :password_confirmation
  %p
    = f.label :role
    %br
    = f.select :role, ['user', 'admin']
  %p
    = f.submit (@user.new_record? ? "Sign up" : "Update")
