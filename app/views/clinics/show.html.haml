- title "Clinic"

%p
  %strong Name:
  = @clinic.name
%p
  %strong Address1:
  = @clinic.address1
%p
  %strong Address2:
  = @clinic.address2
%p
  %strong Postalcode:
  = @clinic.postalcode
%p
  %strong City:
  = @clinic.city
%p
